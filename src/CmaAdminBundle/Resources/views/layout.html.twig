{% extends '::base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('bundles/cmaadmin/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css">
{% stylesheets 'cmaadmin/plugins/jvectormap/jquery-jvectormap-1.2.2.css'
               'cmaadmin/dist/css/admin.min.css'
               'cmaadmin/dist/css/skins/_all-skins.min.css'
               'cmaadmin/css/custom.css'
    filter='cssrewrite'
%}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}
{% endblock %}


{% block javascripts %}
    {% javascripts
       '@CmaAdminBundle/Resources/public/plugins/jQuery/jQuery-2.1.4.min.js'
       '@CmaAdminBundle/Resources/public/js/bootstrap.min.js'
       '@CmaAdminBundle/Resources/public/plugins/fastclick/fastclick.min.js'
       '@CmaAdminBundle/Resources/public/dist/js/app.min.js'
       '@CmaAdminBundle/Resources/public/plugins/sparkline/jquery.sparkline.min.js'
       '@CmaAdminBundle/Resources/public/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js'
       '@CmaAdminBundle/Resources/public/plugins/jvectormap/jquery-jvectormap-world-mill-en.js'
       '@CmaAdminBundle/Resources/public/plugins/slimScroll/jquery.slimscroll.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/" class="logo">
                <img src="{{ asset('img/smallLogoHeaderHome.png') }}" width="50" alt="" />
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
            </nav>
        </header>
        {% include 'CmaAdminBundle:Common:menu.html.twig' %}

        <!-- Content Wrapper. Contains page content -->
        {% block content %}

        {% endblock %}

        <footer class="main-footer">
            <strong>Copyright &copy; 2016 <a href="http://www.cma.com/">Custom My Art</a>.</strong> All rights reserved.
        </footer>
    </div>
    </body>
{% endblock %}