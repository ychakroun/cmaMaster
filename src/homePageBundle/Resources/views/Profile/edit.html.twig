{% trans_default_domain 'FOSUserBundle' %}

<div class="Main profile">
    {% if is_granted('ROLE_ARTIST') %}
    <form  action="{{ path("artist_edit")}}" enctype="multipart/form-data" method="post" >
        <input id="{{ form._token.vars.id }}" name="{{ form._token.vars.full_name }}"type="hidden" name="_csrf_token" value="{{ form._token.vars.value }}" />
    	<div id="{{form.vars.id}}">
         	{{form_row(form.description)}}
         	{{form_row(form.imageHeader.file,{attr: {'style':"display:none"}})}}
         	{{form_row(form.imageHeader.name,{attr: {'value':username}})}}
         	<div id="{{ form.tags.vars.id}}">
         		<ul class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e }}">
                    {% for tag in form.tags%}
                    <li class="tagLiCss">
                        <div id="profile_tags_{{ tag.vars.name }}">
                            <div>
                                <input id="{{ tag.vars.id }}_name" value= "{{tag.vars.data.name}}" name="{{ tag.vars.full_name }}[name]" maxlength="255" type="text">
                            </div>
                        </div>
                    </li>
                    {% endfor %}
         		</ul>
         	</div>
         	{{form_row(form.image1.file,{attr: {'style':"display:none"}})}}
         	{{form_row(form.image1.name,{attr: {'value':username}})}}
         	{{form_row(form.image2.file,{attr: {'style':"display:none"}})}}
         	{{form_row(form.image2.name,{attr: {'value':username}})}}
         	{{form_row(form.image3.file,{attr: {'style':"display:none"}})}}
         	{{form_row(form.image3.name,{attr: {'value':username}})}}
        </div>
	<input class='buttonAction' type="submit" id="_submit" name="_submit" value="{{ "form.profile.submit"|trans }}" />
	</form>
    <div id="imageAll">
        <div class="imageProfile">
            {% if profile.image1.path %}
                <img src="{{ asset( 'images/'~profile.image1.path ) }}" alt="">
            {% else %}
                <img src="{{ asset( 'img/800x500.jpg' ) }}" alt="">
            {% endif %}
        </div>
        <div class="imageProfile">
            {% if profile.image2.path %}
                <img src="{{ asset( 'images/'~profile.image2.path ) }}" alt="">
            {% else %}
                <img src="{{ asset( 'img/600x400.jpg' ) }}" alt="">
            {% endif %}
        </div>
        <div class="imageProfile">
            {% if profile.image3.path %}
                <img src="{{ asset( 'images/'~profile.image3.path ) }}" alt="">
            {% else %}
                <img src="{{ asset( 'img/600x400.jpg' ) }}" alt="">
            {% endif %}
        </div>
    </div>
    {% endif %}
</div>


