{% extends "homePageBundle::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}CMA User Estimate{% endblock %}
{% block nav %}
    <div id="smallHeader" >
        {% include "homePageBundle:Default:nav.html.twig" %}
    </div>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset( 'js/imgProfileEdit.js' ) }}"></script>
	{{parent()}}
{% endblock %}
{% block main %}

<section class="param">
    <header class="headerSection">
      <div class="globalS">
        <div class="idSection">{{ "estimate_page.header" | trans }}</div>
        <div class="logoSection"><img src="{{ asset("img/logoTampon.png") }}" alt="cma_tampon" /></div>
        <div class="infoSection"></div>
      </div>
    </header>
    <div class="containerS">
      {% include "homePageBundle:Default:sidebar_parameter.html.twig" %}
      <div class="contentS">
        <section id="devis">
          <div class="containerS">
       {{form_start(formEstimate)}}
      <div class="remarques"></div>
      <div class="titleS">
        <div>Décrivez votre commande</div>
        <p>* Champs obligatoires</p>
      </div>
        <div class="descriptionOeuvre">
            <p>
              <label for="{{formEstimate.title.vars.id}}" class="titreOeuvre">{{formEstimate.title.vars.label}}*</label><br>
              {{form_widget(formEstimate.title)}}
            </p>
            <p>
              <label for="{{formEstimate.day.vars.id}}" class="jours">{{formEstimate.day.vars.label}}</label><br>
              {{form_widget(formEstimate.day)}}
            </p>
            <p>
              <label for="{{formEstimate.deliveryAdress.vars.id}}" class="localité">{{formEstimate.deliveryAdress.vars.label}}*</label><br>
              {{form_widget(formEstimate.deliveryAdress)}}
            </p>
            <p>
              <label for="{{formEstimate.medium.vars.id}}" class="localité">{{formEstimate.medium.vars.label}}</label><br>
              {{form_widget(formEstimate.medium)}}
            </p>
            <p class="textarea">
              <label for="{{formEstimate.description.vars.id}}" class="desc">{{formEstimate.description.vars.label}}</label><br>
              {{form_widget(formEstimate.description)}}
            </p>
        </div>
        <div class="titleS">
          <div>Plus de détails</div>
        </div>
        <div class="descriptionOeuvre">
            <p>
              <label for="{{formEstimate.budget.vars.id}}" class="prix">{{formEstimate.budget.vars.label}}</label><br>
              {{form_widget(formEstimate.budget)}}
            </p>
            <p>
              <label for="{{formEstimate.orientation.vars.id}}" class="localité">{{formEstimate.orientation.vars.label}}</label><br>
              {{form_widget(formEstimate.orientation)}}
            </p>
            <p>
              <label for="{{formEstimate.technics.vars.id}}" class="techniques">{{formEstimate.technics.vars.label}}</label><br>
              {{form_widget(formEstimate.technics)}}
            </p>
            <p>
              <label for="{{formEstimate.tools.vars.id}}" class="outils">{{formEstimate.tools.vars.label}}</label><br>
              {{form_widget(formEstimate.tools)}}
            </p>
            <p>
              <label for="{{formEstimate.width.vars.id}}" class="largeur">{{formEstimate.width.vars.label}}</label><br>
          {{form_widget(formEstimate.width)}}
            </p>
            <p>
              <label for="{{formEstimate.height.vars.id}}" class="hauteur">{{formEstimate.height.vars.label}}</label><br>
              {{form_widget(formEstimate.height)}}
            </p>
        </div>
        <div class="titleS">
          <div>Illustrer votre demande</div>
        </div>
        <div id="uploadImage">
          <div id="div1" class="imageEstimate">
            {{form_widget(formEstimate.image1.file,{attr: {'style':"display:none"}})}}
            {{form_row(formEstimate.image1.name,{attr: {'value': username }})}}
            {% if estimate.image1 %}
              <img id="1" src="{{ asset("images/"~estimate.image1.path) }}" alt="">
            {% endif %}
          </div>
          <div  id="div2" class="imageEstimate" >
            {{form_widget(formEstimate.image2.file,{attr: {'style':"display:none"}})}}
            {{form_row(formEstimate.image2.name,{attr: {'value': username }})}}
            {% if estimate.image2 %}
              <img id="2" src="{{ asset("images/"~estimate.image2.path) }}" alt="">
            {% endif %}
            <!-- <canvas id="imageCanvas"></canvas> -->
          </div>
          <div id="div3" class="imageEstimate" >
            {{form_widget(formEstimate.image3.file,{attr: {'style':"display:none"}})}}
            {{form_row(formEstimate.image3.name,{attr: {'value': username }})}}
            {% if estimate.image3 %}
              <img id="3" src="{{ asset("images/"~estimate.image3.path) }}" alt="">
            {% endif %}
            <!-- <canvas id="imageCanvas"></canvas> -->
          </div>
      </div>
      <div class="blockCheckbox">
        <div class="checkbox">
          {{form_widget(formEstimate.condition)}}
          <label for="{{formEstimate.condition.vars.id}}"></label>
        </div>
      <p>J'ai pris connaissance et j'accepte les <a href="{{ asset( 'pdf/CGU_CMA_VF.pdf' ) }}" target="_blank">CGU</a> & <a href="{{ asset( 'pdf/CGV_CMA_VF.pdf' ) }}" target="_blank">CGV</a> de Custom My Art </p>
    </div>
    <div class="button">
    {{form_widget(formEstimate.save)}}
    {{form_widget(formEstimate.submit)}}
    </div>
    <div class="footertext">
      <div class="alertBox">
        <p class="alert"><img src="{{ asset("img/alert.png") }}" alt="alert" width="18"/><b> Informations importantes</b></p><br>
        Votre demande va être envoyée en <b>Appel d’offre</b>, c’est à dire à l’ensemble de la communauté d’artistes CMA. Vous pouvez également envoyer une demande directement à l’artiste de votre choix, en cliquant sur le bouton <b>Demander un devis</b> de son profil.
        <div class="smallLogo"><img src="{{asset('img/smallLogo.png')}}" alt=""></div>
      </div>
    </div>
    {{form_widget(formEstimate._token)}}
    {{form_end(formEstimate)}}
  </div>
  <div id="imgtmp" style="display:none"></div>
    </div>
    </section>
  </div>
</section>
{% endblock %}
