{% extends "homePageBundle::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}CMA Artist{% endblock %}
{% block nav %}
  <div id="smallHeader" >
    {% include "homePageBundle:Default:nav.html.twig" %}
  </div>
{% endblock %}
{% block main %}
  <div class="tags">
    {% if tagServices.findAll %}
      {% for tag in tagServices.findAll %}
        <a href="#" id="{{tag.id}}" >
          <span class="tag">{{ tag.name }}</span>
        </a>
      {% endfor %}
    {% endif %}
  </div>
   <div class="artists">
   		{% if listArtists.pageArtist %}
        	{% for section in listArtists.pageArtist %}
            <section id="{{ loop.index }}" class="sectionArtistPage">
              {% for artist in section %}
              <a href="{{ path('artist_profile', { 'username': artist.username }) }}">
                <div class="blockArtist">
                  <div class="info">
                    <span class="username" id="{{ artist.id }}">{{artist.username}}</span>
                    {% if  listArtists.getInformation(artist)%}
                      {% set information = listArtists.getInformation(artist) %}
                      <span class="pictoMap"><img src="{{asset('img/map.png')}}"></span>
                      <span class="localisation">{{information.pays}}</span>
                    {% endif %}
                  </div>
                  {% if listArtists.getProfile(artist) %}
                    {% set profile = listArtists.getProfile(artist) %}
                    <div class="imageAll">
                      <div class= "imageProfile">
                        <div class="description"><div class="content">{{profile.description}}</div></div>
                        {% if profile.image1 %}
                          <img src="{{ asset( 'images/'~profile.image1.path ) }}" alt="">
                        {% else %}
                                <img src="{{ asset( 'img/800x500.jpg' ) }}" alt="">
                        {% endif %}
                      </div>
                      <div class= "imageProfile">
                        {% if profile.image2 %}
                          <img src="{{ asset( 'images/'~profile.image2.path ) }}" alt="">
                        {% else %}
                                <img src="{{ asset( 'img/600x400.jpg' ) }}" alt="">
                        {% endif %}
                      </div>
                      <div class= "imageProfile">
                        {% if profile.image3 %}
                          <img src="{{ asset( 'images/'~profile.image3.path ) }}" alt="">
                        {% else %}
                                <img src="{{ asset( 'img/600x400.jpg' ) }}" alt="">
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>
              </a>
              {% endfor %}
            </section>
        	{% endfor %}
        {% else %}
			<h1>
				{{ 'noartiste' | trans}}
			</h1>
        {% endif %}
    </div>
{% endblock %}