{% trans_default_domain 'FOSUserBundle' %}
{% block nav %}
	<header id="header">
    <div id="globalH">
      <header id="headerHeader">
        <div id="search">
          <div id="smallLogo">
          	{% image '@homePageBundle/Resources/img/smallLogoHeaderHome.png' %}
    				<a href="{{ url('home_page_homepage') }}"><img src="{{ asset_url }}" alt="" /></a>
			{% endimage %}
          </div>
          <div class="box">
            <input class="text" type="text" placeholder="une oeuvre, un artiste ..." required>
            <button class="icon">
            {% image '@homePageBundle/Resources/img/search.png' %}
    				  <img src="{{ asset_url }}" alt="" />
				    {% endimage %}
			</button>
          </div>
        </div>
        <nav id="principal">
          <ul>
            <li><a href="{{ url('listArtists') }}">Les artistes</a></li>
            <li><a href="{{ url('listGalleries') }}">La galerie</a></li>
            <li>Le concept</li>
            <li>Aide</li>
            <li>
            {% image '@homePageBundle/Resources/img/login.png' %}
    				  <img id="btnCo" src="{{ asset_url }}" alt="" />
				    {% endimage %}
      {% if app.request.get('_route') != 'fos_user_registration_register' %}
				<div id="popupco" class="pop" style="display:none;">
					<div id="poprdr">
            <header id="headerSection" class="headerSection">
            </header>
            <div id="conex">
               {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  <h1>{{ 'layout.logged_in_as' | trans({'%username%' : app.user.username}) }}</h1>
                  <a href="{{ path('fos_user_security_logout') }}">
                  <div id="btnLog" class='buttonAction' >{{ 'layout.logout'|trans }}</div>
                  </a>
                  <a href="{{ path('user_info') }}">
                  <div id="btnLog" class='buttonAction' >{{ 'layout.parameter'|trans }}</div>
                  </a>
                {% else %}
                  <h1>{{ 'layout.login' | trans }}</h1>
                  {{ render (controller('FOSUserBundle:Security:login')) }}
                </div>
                <div id="rgstr">
                  <h1>{{ 'layout.inscription' | trans }}</h1>
                  {{ render(controller('FOSUserBundle:Registration:register')) }}
              {% endif %}
             </div>
					</div>
				</div>
      {% endif %}
			</li>
          </ul>
        </nav>
        <div class="devis"><button class="demander"><span>Demander un devis</span></button></div>
      </header>
      {% block maxheader %}
      {% endblock %}
    </div>
    {% block footerheader %}
    {% endblock %}
  </header>
{% endblock %}