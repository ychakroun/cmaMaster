{% extends "homePageBundle:Default:index.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}CMA User confirmation{% endblock %}
{% block main %}
	{% block pop_up %}
		<div  class="pop" style="display:block;">
			<div class="poprdr">
				{% if is_granted('ROLE_ARTIST') %}
					{% embed "homePageBundle:Default:popup.html.twig" %}
					{% trans_default_domain 'FOSUserBundle' %}
						{% block title %}
							{{ 'registration.confirm.title'|trans }}
						{% endblock %}
						{% block content %}
							<p><b>{{ 'registration.confirm.artistgreat'|trans }}</b></p>
							</br>
							<p>{{ 'registration.confirm.artistconfirm'|trans }}</p>
							<p>{{ 'registration.confirm.artistmessage1'|trans }}</p>
							</br><p>{{ 'registration.confirm.artistmessage2'|trans }}</p>
						{% endblock %}
					{% endembed %}
				{% else %}
					{% embed "homePageBundle:Default:popup.html.twig" %}
						{% trans_default_domain 'FOSUserBundle' %}
						{% block title %}
							{{ 'registration.confirm.title'|trans }}
						{% endblock %}
						{% block content %}
							<p><b>{{ 'registration.confirm.great'|trans }}</b></p>
							</br>
							<p>{{ 'registration.confirm.confirm'|trans }}</p>
							<p>{{ 'registration.confirm.message1'|trans }}</p>
							</br><p>{{ 'registration.confirm.message2'|trans }}</p>
						{% endblock %}
					{% endembed %}
				{% endif %}
			</div>
		</div>
	{% endblock %}
	{{parent()}};
{% endblock %}